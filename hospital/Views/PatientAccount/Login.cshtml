@{
}


@{
    ViewData["Title"] = "Login Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
   <div class="form-container">
   @model hospital.Entities.Account


    @using (Html.BeginForm("CheckAccount", "PatientAccount", FormMethod.Post))
    {

        @Html.ValidationSummary(true);
      
        <div class="text-danger">
                @Html.ValidationMessage("incorect_login_data")
        </div>

        <div class="text-danger">
                @Html.ValidationMessage("unverified")
        </div>
        

        <label for="email">Адреса електронної пошти:</label>
      
        @Html.TextBoxFor(m => m.Email)
       
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
      

        <label for="password">Пароль:</label>
       
        @Html.PasswordFor(m => m.Password)
        
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        

        <input type="submit" value="Submit">
    }
    </div>
</body>
</html>
